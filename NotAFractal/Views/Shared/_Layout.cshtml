@using System.Web.Optimization

<!DOCTYPE html>
<html>
    <head>
        <title>Not A Fractal</title>
        @Styles.Render("~/bundles/css")        
    </head>
    <body>               
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span10 mainContent">
                    @RenderBody()              
                </div>
                <div id="sidebar" class="span2 mainSidebar visible-desktop">
                    @RenderSection("sidebar", false)     
                </div>
                <div class="span2 mainSidebar visible-phone visible-tablet">
                    @RenderSection("sidebar", false)     
                </div>
            </div>
        </div>
                
        <hr/>
        <footer>
            <p>Not A Fractal - A Limited Subset of Everything</p>
            <p>&copy; Stefan van Oudenaarden</p>
        </footer>

        @Scripts.Render("~/bundles/scripts")
    </body>
</html>
